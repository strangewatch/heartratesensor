<?xml version="1.0" encoding="utf-8"?>
<android.support.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sw_primary_dark"
    android:keepScreenOn="true"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context="watch.strange.heart.MainActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/inner_frame_layout_padding"
        app:boxedEdges="all">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Peak detector"
            android:textAllCaps="true"
            android:textColor="@color/sw_gold"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastReadingTv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textAllCaps="true"
            android:textColor="@color/sw_gold"
            android:textSize="55sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastReadingTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Last reading: -"
            android:textAllCaps="true"
            android:textColor="@color/sw_gold"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/averageIntervalTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Avg Interval: -"
            android:textAllCaps="true"
            android:textColor="@color/sw_gold"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.wear.widget.BoxInsetLayout>

